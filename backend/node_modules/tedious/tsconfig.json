{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [ "esnext" ],
    "skipLibCheck": true,
  },

  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
  ],

  "typedocOptions": {
    "name": "Tedious",
    "mode": "library",
    "out": "./docs",
    "exclude": "**/node_modules/**",
    "inputFiles": ["./src/tedious.ts"]
  }
}
